{
  "manifest_version": 2,
  "name": "DNSSEC Interference Study",
  "description": "Mozilla addon that measures DNSSEC interference by middleboxes",
  "version": "0.0.1",

  "hidden": true,

  "applications": {
    "gecko": {
      "id": "dnssec-study@mozilla.org"
    }
  },

  "permissions": [
  ],

  "browser_action": {
    "default_icon": "img/experiments-icon.svg",
    "default_title": "DNSSSEC Study"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "experiment_apis": {
    "udpsocket": {
      "schema": "experiments/udpsocket/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["experiments", "udpsocket"]],
        "script": "experiments/udpsocket/api.js"
      }
    },
    "resolvconf": {
      "schema": "experiments/resolvconf/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["experiments", "resolvconf"]],
        "script": "experiments/resolvconf/api.js"
      }
    }
  }
}
